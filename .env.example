# Environment Configuration for Liquid Metal Antenna Optimizer
# Copy this file to .env and fill in your values

# Application Settings
ENV=development
DEBUG=true
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000

# Security Configuration
ANTENNA_SECURITY_KEY=your-super-secure-key-here-change-me
JWT_SECRET_KEY=your-jwt-secret-key-change-me
SESSION_SECRET_KEY=your-session-secret-key-change-me

# Database Configuration
POSTGRES_PASSWORD=your-postgres-password-here
POSTGRES_USER=lma_user
POSTGRES_DB=lma_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://lma_user:your-postgres-password-here@localhost:5432/lma_db

# Redis Configuration
REDIS_PASSWORD=your-redis-password-here
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://:your-redis-password-here@localhost:6379/0

# Monitoring & Analytics
GRAFANA_PASSWORD=your-grafana-password-here
PROMETHEUS_RETENTION=15d
SENTRY_DSN=your-sentry-dsn-here

# Performance Configuration
MAX_WORKERS=4
MAX_CONCURRENT_REQUESTS=100
CACHE_SIZE_MB=1024
GPU_ENABLED=false
CUDA_VISIBLE_DEVICES=0,1

# Research & ML Configuration
MODEL_CACHE_DIR=./models
DATA_CACHE_DIR=./cache
TRAINING_DATA_PATH=./data/training
RESULTS_DATA_PATH=./data/results

# Optimization Settings
DEFAULT_MAX_ITERATIONS=1000
DEFAULT_POPULATION_SIZE=50
CONVERGENCE_TOLERANCE=1e-6
OPTIMIZATION_TIMEOUT=3600

# Security Settings
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60
ENABLE_ENCRYPTION=true
ENABLE_AUDIT_LOGGING=true

# Distributed Computing
MPI_ENABLED=false
CLUSTER_NODES=localhost
WORKER_TIMEOUT=300
BATCH_SIZE=10

# API Configuration
API_TITLE="Liquid Metal Antenna Optimizer"
API_VERSION=1.0.0
API_DESCRIPTION="Advanced liquid-metal antenna optimization platform"
DOCS_URL=/docs
OPENAPI_URL=/openapi.json

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
ALLOWED_METHODS=GET,POST,PUT,DELETE
ALLOWED_HEADERS=*

# File Storage
UPLOAD_MAX_SIZE=100MB
ALLOWED_EXTENSIONS=.json,.csv,.npy,.npz
STORAGE_PATH=./uploads

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@your-domain.com

# AWS Configuration (optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-west-2
S3_BUCKET=your-s3-bucket

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=./backups

# Feature Flags
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_TRANSFORMER_MODELS=true
ENABLE_QUANTUM_OPTIMIZATION=false
ENABLE_MULTI_FIDELITY=true
ENABLE_PHYSICS_INFORMED=true

# Development Settings (development only)
RELOAD=true
DEBUG_TOOLBAR=true
PROFILING_ENABLED=false